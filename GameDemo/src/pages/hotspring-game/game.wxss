.game-container {
  width: 100vw;
  height: 100vh;
  background: #000000; /* 纯黑背景 */
  position: relative;
  overflow: hidden;
}

.game-canvas {
  width: 100%;
  height: 100%;
}

.start-screen {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 200;
}

.start-button {
  padding: 10px 20px;
  font-size: 18px;
  color: white;
  background-color: #07c160;
  border-radius: 8px;
}

.game-over-popup {
  position: absolute;
  top: 30%;
  left: 10%;
  right: 10%;
  background: white; /* */
  padding: 20rpx;
  border-radius: 16rpx;
  z-index: 100;
  text-align: center;
  display: flex;
  flex-direction: column;
  /* gap: 10px; */ /* */
}

/* 为.game-over-popup的子元素添加margin来实现间隔 (修改后的版本) */
.game-over-popup > text {
    margin-bottom: 15px; /* 只给 text 元素添加下边距 */
}

.control-panel {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  z-index: 50;
}

/* 新增：游戏胜利弹窗的样式 */
.game-won-popup {
  position: absolute;
  top: 30%;
  left: 10%;
  right: 10%;
  background: linear-gradient(135deg, #FFD700, #FFA500); /* 金色渐变背景 */
  padding: 30rpx;
  border-radius: 24rpx;
  z-index: 100;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4px 15px rgba(255, 215, 0, 0.4);
}

.game-won-popup .congrats-title {
  font-size: 24px;
  font-weight: bold;
  color: white;
  margin-bottom: 15px;
  text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
}

.game-won-popup text {
  color: white;
  margin-bottom: 20px;
}

.game-won-popup button {
  padding: 10px 25px;
  font-size: 18px;
  color: #FFA500; /* 橙色字体 */
  background-color: white;
  border-radius: 8px;
  font-weight: bold;
}


/* 新增：知识点弹窗样式 */
.knowledge-popup {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%); /* 完美居中 */
  width: 80%;
  background-color: rgba(255, 255, 255, 0.95); /* 半透明白色背景 */
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
  z-index: 300;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2px solid #07c160;
}

.knowledge-title {
  font-size: 20px;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.knowledge-content {
  font-size: 16px;
  color: #555;
  text-align: justify;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.knowledge-button {
  padding: 10px 30px;
  font-size: 16px;
  color: white;
  background-color: #07c160; /* 微信绿 */
  border-radius: 50px; /* 胶囊形状 */
}